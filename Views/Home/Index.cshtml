@model MMIv3.Models.User
<head>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet'>
</head>
<body style="overflow-x: hidden; overflow-y: hidden;">
    <div class="rounded_animation"></div>
    <div class="login_navcontainer">
        <div class="login_headercontainer">
            <div class="myimg">
                <img class="baner_img" src="~/images/koya.svg" alt="logo" />
            </div>
            <div class="login_baner">
                <h1 class="welcome_text">Welcome to Better Chat</h1>
            </div>
        </div>
    </div>
    <div class="login_page">
        <div class="login_loginform">
            <form method="post" action="/Home/LogInto" role="form" class="login_form">
                <h1>Login</h1>
                <input class="login_form_input" id="username" name="username" type="text" placeholder="Username" required /><br />
                <input class="login_form_input" id="password" name="password" type="password" placeholder="Password" required /><br /><br />
                <p>Don't have an account? @Html.ActionLink("Create it now!", "Register", "Home", new { area = "" }, new { @class = "nav-link" })</p>
                <button class="btn btn-primary buttonn" type="submit">Log In</button>
            </form>
        </div>
        <div class="login_desc">
            <p>
                Better Chat is the most
                innovative social platform
                and place to talk with
                people around the world!
                What are you waiting for?
                Join us now!
            </p>
        </div>
        <div class="login_triangle"></div>
        <div class="login_myicon">
            <img class="login_descicon" src="~/images/koya.svg" alt="logo" />
        </div>
    </div>
</body>